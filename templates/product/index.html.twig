
    <h3 class="text-center fw-bold mb-5">{{ category.name }}</h3>
      
    <div class="cards-box d-flex flex-wrap justify-content-center">
      
      {% for product in products %}

        <div class="product-card d-flex flex-column mb-3">
          <img src="{{ asset('upload/images/products/' ~ product.image) }}" alt="" class="card-img-top img-fluid">
          <div class="product-details">
            <p class="text-center">{{ product.description }}</p>
          </div>
          <div class="product-price text-center fw-bold">{{ product.price }} â‚¬</div>
          <div class="product-logo d-flex justify-content-between align-items-end p-2">
            <button class="me-auto logo-btn"><img src="../assets/img/icon-heart-red24.png" alt=""></button>
            <button class="logo-btn minus"><img src="../assets/img/icon-minus-red24.png" alt=""></button>
            <span class="qte">1</span>
            <button class="logo-btn plus"><img src="../assets/img/plus-red24.png" alt=""></button>
          </div>
          <button class="btn-add-card"><a href="{{ path('add', {id: product.id}) }}">Ajouter au panier</a></button>
        </div>

       {% endfor %}
  
    </div>
