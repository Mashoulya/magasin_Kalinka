{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}

<!-- NAV-MENU -->
 
<div class="container-fluid d-flex mb-4">
  
 {% include 'menu.html.twig' %}
          
<!-- CONTENT -->

<div class="content-box">
  
  <h3 class="text-center fw-bold mb-5">Produits populaires</h3>
  
  <div class="layer">    
    <div class="viewport">
      <div class="wrapper cards-box d-flex">

        {% for product in mostPopularProducts %}
      
        <div class="product-card d-flex flex-column">
          <img src="{{ asset('upload/images/products/' ~ product.image) }}" alt="" class="card-img-top img-fluid">
          <div class="product-details p-1">
            <p class="text-center">{{ product.description|raw}}</p>
          </div>
          <div class="product-price text-center fw-bold">{{ (product.price / 100)|number_format(2, ',', '.') }} €</div>
            {% if product.stock == 0 %}
              <p class="product-stock"><span class="red-dot">&#8226;</span>Épuisé</p>
            {% endif %}
          <a href="{{ path('add', {id: product.id}) }}"><button class="btn-add-card">Ajouter au panier</button></a>
        </div>

        {% endfor %}

      </div>
    </div>
    
    <button class="pre-btn"><img src="../assets/img/arrow30.png" alt=""></button>
    <button class="nxt-btn"><img src="../assets/img/arrow30.png" alt=""></button>
  </div>
  
  <h4 class="p-4 text-center">Nous proposons un large choix de produits de différents pays dans notre magasin</h4>
  
  <div class="lands">
    
    <div class="land">
      <img src="../assets/img/Armenia.png" alt="">
      <p>Arménie</p>
    </div>
  
    <div class="land">
      <img src="../assets/img/Belarus.png" alt="">
      <p>Biélorussie</p>
    </div>
  
    <div class="land">
      <img src="../assets/img/Georgia.png" alt="">
      <p>Georgie</p>
    </div>
  
    <div class="land">
      <img src="../assets/img/Russia.png" alt="">
      <p>Russie</p>
    </div>
  
    <div class="land">
      <img src="../assets/img/Ukraine.png" alt="">
      <p>Ukraine</p>
    </div>
  
  </div>
  
</div>

</div>
  

{% endblock %}

