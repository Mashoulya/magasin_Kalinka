{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

<div id="btn-menu" class="btn-menu text-center">Menu</div>
  
<div class="d-flex">
  {% include 'menu.html.twig' %}
            
  <!-- CONTENT -->
  
  <div class="content-box">
    
    <h3 class="text-center fw-bold m-3">Produits populaires</h3>
    
    <div class="layer">    
      <div class="viewport">
        <div class="wrapper cards-box d-flex mb-5">
  
          {% for product in mostPopularProducts %}
        
          <div class="product-card d-flex flex-column">
            <img src="{{ asset('upload/images/products/' ~ product.image) }}" alt="" class="card-img-top img-fluid">
            <div class="product-details text-center">
              <span class="prod-name">{{ product.name }}</span>
              <span class="prod-descr">{{ product.description|raw }}</span>
            </div>
            <div class="product-price text-center fw-bold">{{ (product.price / 100)|number_format(2, ',', '.') }} €</div>
              {% if product.stock == 0 %}
                <span class="product-stock"><span class="red-dot">&#8226;</span>Épuisé</span>
                 {% else %}
                <span class="product-stock"><span class="invisible-dot">&#8226;</span></span>
              {% endif %}
            <button class="btn-add-card" data-product-id="{{ product.id }}" data-product-stock="{{ product.stock }}">
            Ajouter au panier
            </button>
          </div>
  
          {% endfor %}
  
        </div>
      </div>
      
      <button class="pre-btn"><img src="../assets/img/arrow30.png" alt=""></button>
      <button class="nxt-btn"><img src="../assets/img/arrow30.png" alt=""></button>
    </div>
    
    <h4 class="p-4 text-center">Nous proposons un large choix de produits de différents pays dans notre magasin. Venez découvrir!</h4>
  
    <div id="galery">
      <div class="box one">
        <img src="../assets/img/photo_magasin.jpg" alt="">
      </div>
      <div class="box two">
        <img src="../assets/img/photo1.jpg" alt="">
      </div>
      <div class="box three">
        <img src="../assets/img/photo2.jpg" alt="">
      </div>
      <div class="box four">
        <img src="../assets/img/photo3.jpg" alt="">
      </div>
    </div>

    <div id="lightbox" class="lightbox">
      <span class="close" onclick="closeLightbox()">&times;</span>
      <div class="lightbox-content"></div>
    </div>
    
  </div>
</div>

  {% block javascripts %}
    <script src="{{ asset('assets/js/script.js') }}"></script>
  {% endblock %}

{% endblock %}

